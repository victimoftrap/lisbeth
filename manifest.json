{
    "manifest_version": 2,
    "name": "lisbeth",
    "version": "0.0.1",
    "permissions": ["activeTab", "tabs"],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["lisbeth-background.js"]
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["lisbeth-content.js"]
        }
    ]
}